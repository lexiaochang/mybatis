<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chris.mybais.mapper.AutoIncrementMapper" >

    <insert id="insertData" parameterType="com.chris.mybais.po.AutoIncrementEntity" >
        insert into auto_increment (name, age)
        values (#{name,jdbcType=VARCHAR}, #{age,jdbcType=VARCHAR})
    </insert>

    <select id="selectData" parameterType="Long" resultType="com.chris.mybais.po.AutoIncrementEntity">
        SELECT * FROM auto_increment WHERE ID = #{id}
    </select>

    <delete id="deleteData" parameterType="java.lang.Long" >
        delete from auto_increment
        where id = #{id,jdbcType=INTEGER}
    </delete>

    <update id="updateData" parameterType="com.chris.mybais.po.AutoIncrementEntity" >
        update auto_increment
        <set >
            <if test="name != null" >
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="age != null" >
                age = #{age,jdbcType=INTEGER},
            </if>
        </set>
        where id = '2'
    </update>

</mapper>